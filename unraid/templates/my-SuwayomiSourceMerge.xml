  <Config Name="Additional Override Disk 9" Target="/ssm/override/disk9" Default="" Mode="rw" Description="Optional container path: /ssm/override/disk9" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Additional Override Disk 10" Target="/ssm/override/disk10" Default="" Mode="rw" Description="Optional container path: /ssm/override/disk10" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Source Disk 1" Target="/ssm/sources/disk1" Default="/mnt/disk1/share/suwayomi-manga-downloads/mangas" Mode="rw" Description="Container Path: /ssm/sources/disk1 (direct disk/pool path, not /mnt/user)." Type="Path" Display="always" Required="true" Mask="false">/mnt/disk1/share/suwayomi-manga-downloads/mangas</Config>
  <Config Name="Source Disk 2" Target="/ssm/sources/disk2" Default="" Mode="rw" Description="Optional container path: /ssm/sources/disk2" Type="Path" Display="advanced" Required="false" Mask="false"></Config>

<?xml version="1.0"?>
<Container version="2">
  <Name>SuwayomiSourceMerge</Name>
  <Repository>ghcr.io/cjmanca/suwayomisourcemerge:latest</Repository>
  <Registry>https://github.com/cjmanca/SuwayomiSourceMerge/pkgs/container/suwayomisourcemerge</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/cjmanca/SuwayomiSourceMerge/issues</Support>
  <Project>https://github.com/cjmanca/SuwayomiSourceMerge</Project>
  <Overview>Merge duplicate Suwayomi manga sources into a single merged library using mergerfs. Important for Unraid: use direct disk or pool paths (for example /mnt/diskX or /mnt/cache), avoid /mnt/user for runtime paths, and keep /ssm/merged configured with rshared propagation.</Overview>
  <Category>MediaApp:Books Tools:Utilities</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/cjmanca/SuwayomiSourceMerge/main/unraid/templates/my-SuwayomiSourceMerge.xml</TemplateURL>
  <Icon/>
  <ExtraParams>--device=/dev/fuse --cap-add=SYS_ADMIN --security-opt apparmor=unconfined --security-opt seccomp=unconfined</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="Container user ID used for file ownership." Type="Variable" Display="always" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Container group ID used for file ownership." Type="Variable" Display="always" Required="false" Mask="false">100</Config>
  <Config Name="Appdata Config Path" Target="/ssm/config" Default="/mnt/cache/appdata/ssm/config" Mode="rw" Description="Container Path: /ssm/config" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/ssm/config</Config>
  <Config Name="Runtime State Path" Target="/ssm/state" Default="/mnt/cache/appdata/ssm/state" Mode="rw" Description="Container Path: /ssm/state" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/ssm/state</Config>
  <Config Name="Merged Output Path (rshared)" Target="/ssm/merged" Default="/mnt/cache/appdata/ssm/merged" Mode="rw,rshared" Description="Container Path: /ssm/merged (must be rshared)." Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/ssm/merged</Config>
  <Config Name="Preferred Override Path" Target="/ssm/override/priority" Default="/mnt/cache/ssm/override" Mode="rw" Description="Container Path: /ssm/override/priority (preferred write target)." Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/ssm/override</Config>
  <Config Name="Additional Override Disk 1" Target="/ssm/override/disk1" Default="" Mode="rw" Description="Optional container path: /ssm/override/disk1" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Additional Override Disk 2" Target="/ssm/override/disk2" Default="" Mode="rw" Description="Optional container path: /ssm/override/disk2" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Additional Override Disk 3" Target="/ssm/override/disk3" Default="" Mode="rw" Description="Optional container path: /ssm/override/disk3" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
